# vim: ts=2:sw=2:sts=2:et:ft=yaml.ansible
# -*- mode: yaml; yaml-indent-offset: 2; indent-tabs-mode: nil; -*-
---
extends: default
rules:
  line-length:
    max: 79
    level: error
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true
ignore: |
  changelogs/changelog.yaml
  tests/output/*
  *.wip
  *.wip/*
